@page "/BookCategory/EditCategory/{Id:int}"
@inherits EditBookCategoryBase

@attribute [Authorize(Roles = "ADMIN")]



        @if (ErrorMessage != null)
        {
            <p>@ErrorMessage</p>
        }
        <h3>Edit Book Category</h3>

        <input @bind="BookCategory.Name" placeholder="Name" />


        <button @onclick="@(async()=> {
        if(BookCategory.Name != null)
        {
            await UpdateCategory();
        }
        })">
            Edit Category
        </button>



